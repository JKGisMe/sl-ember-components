<header class="grid-header">
    <div class="row">
        <div class="col-sm-6">
            {{yield}}
        </div>

        {{#if filterPath}}
            <div class="col-sm-6 text-right">
                {{#sl-button
                    action="toggleFilterPane"
                    size="small"
                }}
                    {{filterButtonLabel}}
                {{/sl-button}}
            </div>
        {{/if}}
    </div>
</header>

<div class="filter-pane">
    {{#if filterPaneOpen}}
        <div class="filter-content">
            {{#if filterPath}}
                {{render-dynamic filterPath}}
            {{/if}}
        </div>
    {{/if}}
</div>

<div class="list-pane">
    <table class="table column-headers">
        <thead>
            <tr>
                {{#each column in columns}}
                    {{#sl-grid-column-header column=column}}
                        {{log column.sortIconClass}}
                        {{column.title}}
                        {{#if column.sortable}}
                            <i {{bind-attr class=":fa sortIconClass"}}></i>
                        {{/if}}
                    {{/sl-grid-column-header}}
                {{/each}}

                {{#if showActions}}
                    <th class="actions-cell"></th>
                {{/if}}
            </tr>
        </thead>
    </table>

    <div class="content">
        <table class="table table-hover table-striped">
            <tbody>
                {{#each row in content itemController=detailPath}}
                    {{#sl-grid-row}}
                        {{#each column in columns}}
                            {{sl-grid-cell column=column row=row}}
                        {{/each}}

                        {{#if showActions}}
                            <td class="actions-cell">
                                {{#sl-drop-button align="right" label=actionsButtonLabel size="small" theme="hover"}}
                                    {{#each rowAction in row.rowActions}}
                                        {{sl-drop-option action=rowAction.action label=rowAction.label}}
                                    {{/each}}
                                {{/sl-drop-button}}
                            </td>
                        {{/if}}
                    {{/sl-grid-row}}
                {{/each}}
            </tbody>
        </table>
    </div>

    <footer>
        <div class="row">
            <div class="col-xs-6">
                {{#if footerPath}}
                    {{partial footerPath}}
                {{/if}}
            </div>
            <div class="col-xs-6 text-right">
                {{#if showPagination}}
                    {{sl-pagination
                        busy=loading
                        changePage="changePage"
                        currentPage=currentPage
                        totalPages=totalPages
                    }}
                {{/if}}
            </div>
        </div>
    </footer>
</div>

<div class="detail-pane">
    <header>
        <span class="title">
            {{#if detailHeaderPath}}
                {{render-dynamic detailHeaderPath activeRecord.model}}
            {{/if}}
        </span>

        <button {{action "closeDetailPane"}} class="close">&times;</button>
    </header>

    <div class="content">
        <div class="detail-content">
            {{#if detailPath}}
                {{render-dynamic detailPath activeRecord.model}}
            {{/if}}
        </div>
    </div>

    <footer>
        {{#if detailFooterPath}}
            {{render-dynamic detailFooterPath activeRecord.model}}
        {{/if}}
    </footer>
</div>
